<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Grocery.App.Views.NewProductView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:Grocery.App.ViewModels"
    x:DataType="vm:NewProductViewModel">

    <VerticalStackLayout Padding="20" Spacing="15">

        <!--  Title  -->
        <Label
            FontAttributes="Bold"
            FontSize="24"
            Text="{Binding PageTitle}"
            TextColor="Black" />

        <!--  Name  -->
        <Label Text="Name: *" />
        <Entry
            x:Name="NameEntry"
            Placeholder="Enter product name (required)"
            Text="{Binding Name}" />
        <Label
            x:Name="NameError"
            FontSize="12"
            IsVisible="False"
            Text="Name is required"
            TextColor="Red" />

        <!--  Stock  -->
        <Label Text="Stock: *" />
        <Entry
            x:Name="StockEntry"
            Keyboard="Numeric"
            Placeholder="Enter stock quantity (required)"
            Text="{Binding Stock}" />
        <Label
            x:Name="StockError"
            FontSize="12"
            IsVisible="False"
            Text="Stock is required"
            TextColor="Red" />

        <!--  ShelfLife (DateOnly)  -->
        <Label Text="Shelf Life: *" />
        <DatePicker
            x:Name="ShelfLifePicker"
            Date="{Binding ShelfLife}"
            Format="yyyy-MM-dd"
            IsEnabled="False" />
        <Label
            x:Name="ShelfLifeError"
            FontSize="12"
            IsVisible="False"
            Text="Shelf Life is required"
            TextColor="Red" />

        <!--  Price  -->
        <Label Text="Price: *" />
        <Entry
            x:Name="PriceEntry"
            Keyboard="Text"
            Placeholder="Enter price 20,30 (required)"
            Text="{Binding PriceText}" />
        <Label
            x:Name="PriceError"
            FontSize="12"
            IsVisible="False"
            Text="Price is required and must be greater than 0"
            TextColor="Red" />

        <!--  Button  -->
        <HorizontalStackLayout Spacing="10">
            <Button
                BackgroundColor="Green"
                Command="{Binding SaveCommand}"
                Text="Save"
                TextColor="White"
                VerticalOptions="Center" />

        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>
